<odoo>
    <data>
        <template id="report_product_user_assignment">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <tr>
                        <td><span t-field="doc.product_id.name"/></td>
                        <td><span t-field="doc.user_id.name"/></td>
                        <td><span t-field="doc.assign_date"/></td>
                    </tr>
                </t>
            </t>
        </template>
    </data>
</odoo>
