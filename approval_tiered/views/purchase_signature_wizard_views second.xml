<odoo>
   <record id="view_purchase_request_second_approval_wizard_form" model="ir.ui.view">
    <field name="name">purchase.request.second.approval.wizard.form</field>
    <field name="model">purchase.request.second.approval.wizard</field>
    <field name="arch" type="xml">
        <form string="Approve with Signature Second Approval">
            <group>
                <field name="purchase_request_id" readonly="1"/>
                <field name="signature" widget="signature"/>
            </group>
            <footer>
                <button string="Save" type="object" name="action_confirm_signature" class="btn-primary"/>
                <button string="Discard" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

</odoo> 
