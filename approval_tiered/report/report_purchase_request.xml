<odoo>
    <template id="report_purchase_request_document_inherit" inherit_id="purchase_request.report_purchase_request">
        <!-- Insert after the product table or at the end of the page -->
        <xpath expr="//div[@class='page']" position="inside">
            <t t-if="o.approval_stage == 'approved' or o.approval_stage == 'two_approvals'">
                <div class="mt32">
                    <h3>Approval Information</h3>
                    <table class="table table-sm">
                        <tr>
                            <!-- First Approval -->
                            <td>
                                <t t-if="o.approval_signature_1">
                                    <p><strong>First Approval By:</strong> <t t-esc="o.approver_id.name"/></p>
                                    <p><strong>First Approval Signature:</strong></p>
                                    <!-- Render the signature image -->
                                    <img t-att-src="'data:image/png;base64,' + o.approval_signature_1.decode()" width="250px" height="150px"/>
                                </t>
                            </td>
                            <!-- Second Approval -->
                            <td>
                                <t t-if="o.approval_signature_2">
                                    <p><strong>Second Approval By:</strong> <t t-esc="o.second_approver_id.name"/></p>
                                    <p><strong>Second Approval Signature:</strong></p>
                                    <!-- Render the second signature image -->
                                    <img t-att-src="'data:image/png;base64,' + o.approval_signature_2.decode()" width="250px" height="150px"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
