<odoo>
    <!-- Tree View for Equipment -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">equipment.tree</field>
        <field name="model">farming_management.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="maintenance_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Equipment -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">farming_management.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="maintenance_date"/>
                        <field name="farm_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Equipment -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">farming_management.equipment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_equipment_tree"/>
    </record>

    <!-- Menu Item for Equipment -->
    <!-- <menuitem id="menu_equipment" name="Equipment" parent="menu_agriculture_root" action="action_equipment"/> -->
</odoo>
