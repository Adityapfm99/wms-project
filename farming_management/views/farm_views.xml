<odoo>
    <!-- Define the root menu item -->
    <menuitem id="menu_agriculture_root" name="Agriculture" sequence="1"/>

        <!-- Define the farm tree view -->
    <record id="view_farm_tree" model="ir.ui.view">
        <field name="name">farm.tree</field>
        <field name="model">farming_management.farm</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location"/>
                <field name="area"/>
            </tree>
        </field>
    </record>

    <!-- Define the action for the farm model -->
    <record id="action_farm" model="ir.actions.act_window">
        <field name="name">Farms</field>
        <field name="res_model">farming_management.farm</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_farm_tree"/>
    </record>



    <!-- Define the menu item for accessing farms -->
    <menuitem id="menu_farm" name="Farms" parent="menu_agriculture_root" action="action_farm"/>
</odoo>
